    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Fetch analytics data from API
            fetch('/admin/analytics/api', { credentials: 'include' })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        // Update cards
                        document.getElementById('analyticsTotalUsers').textContent = data.totalUsers;
                        document.getElementById('analyticsTotalMeetings').textContent = data.totalMeetings;
                        document.getElementById('analyticsTotalRevenue').textContent = `$${data.totalRevenue || 0}`;
                        document.getElementById('analyticsNewUsers').textContent = data.newUsersThisMonth;

                        // Update static cards with real data
                        document.querySelector('.stat-card.primary .card-title').textContent = data.totalUsers;
                        document.querySelector('.stat-card.success .card-title').textContent = `$${data.totalRevenue || 0}`;
                        document.querySelector('.stat-card.warning .card-title').textContent = data.totalMeetings;
                        document.querySelector('.stat-card.danger .card-title').textContent = `${data.userGrowthPercentage || 0}%`;

                        // User Growth Chart
                        const userGrowthCtx = document.getElementById('userGrowthChart').getContext('2d');
                        new Chart(userGrowthCtx, {
                            type: 'line',
                            data: {
                                labels: data.userGrowth.labels,
                                datasets: [{
                                    label: 'Users',
                                    data: data.userGrowth.data,
                                    borderColor: '#667eea',
                                    backgroundColor: 'rgba(102,126,234,0.1)',
                                    fill: true,
                                    tension: 0.4
                                }]
                            },
                            options: {
                                responsive: true,
                                plugins: { legend: { display: false } }
                            }
                        });

                        // Meetings by Type Chart
                        const meetingsTypeCtx = document.getElementById('meetingsTypeChart').getContext('2d');
                        new Chart(meetingsTypeCtx, {
                            type: 'doughnut',
                            data: {
                                labels: data.meetingsByType.labels,
                                datasets: [{
                                    label: 'Meetings',
                                    data: data.meetingsByType.data,
                                    backgroundColor: [
                                        '#667eea', '#28a745', '#ffc107', '#dc3545', '#20c997'
                                    ]
                                }]
                            },
                            options: {
                                responsive: true,
                                plugins: { legend: { position: 'bottom' } }
                            }
        });
        
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
                        new Chart(revenueCtx, {
            type: 'line',
            data: {
                                labels: data.monthlyRevenueTrend.labels,
                datasets: [{
                                    label: 'Revenue ($)',
                                    data: data.monthlyRevenueTrend.data,
                                    borderColor: '#28a745',
                                    backgroundColor: 'rgba(40,167,69,0.1)',
                    fill: true,
                                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                                return '$' + value;
                            }
                        }
                        }
                }
            }
        });
        
                        // User Role Distribution Pie Chart
                        const userRoleCtx = document.getElementById('userRoleChart').getContext('2d');
                        new Chart(userRoleCtx, {
                            type: 'pie',
            data: {
                                labels: data.userRoleDistribution.labels,
                datasets: [{
                                    label: 'Users',
                                    data: data.userRoleDistribution.data,
                                    backgroundColor: data.userRoleDistribution.colors,
                                    borderWidth: 2,
                                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                                            padding: 20,
                                            usePointStyle: true
                                        }
                                    }
                }
            }
        });
        
                        // Meetings by Status Chart
                        const meetingsStatusCtx = document.getElementById('meetingsStatusChart').getContext('2d');
                        new Chart(meetingsStatusCtx, {
                            type: 'bar',
            data: {
                                labels: data.meetingsByStatus.labels,
                datasets: [{
                                    label: 'Meetings',
                                    data: data.meetingsByStatus.data,
                    backgroundColor: [
                                        '#28a745', '#ffc107', '#dc3545', '#6c757d', '#17a2b8'
                                    ],
                                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                                plugins: { legend: { display: false } },
                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                }
            }
        });
        
                        // Daily Meetings Trend Chart
                        const dailyMeetingsCtx = document.getElementById('dailyMeetingsChart').getContext('2d');
                        new Chart(dailyMeetingsCtx, {
                            type: 'line',
            data: {
                                labels: data.dailyMeetingsTrend.labels,
                datasets: [{
                                    label: 'Meetings',
                                    data: data.dailyMeetingsTrend.data,
                                    borderColor: '#ffc107',
                                    backgroundColor: 'rgba(255,193,7,0.1)',
                                    fill: true,
                                    tension: 0.4,
                                    pointBackgroundColor: '#ffc107',
                                    pointBorderColor: '#fff',
                                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                                plugins: { legend: { display: false } },
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
                            }
                        });
                    }
                })
                .catch(err => {
                    console.error('Error loading analytics:', err);
                    document.getElementById('analyticsTotalUsers').textContent = 'N/A';
                    document.getElementById('analyticsTotalMeetings').textContent = 'N/A';
                    document.getElementById('analyticsTotalRevenue').textContent = 'N/A';
                    document.getElementById('analyticsNewUsers').textContent = 'N/A';
                });
        });
    </script>
