<%- include('layouts/header.ejs') %>
<div class="container mt-4">
  <h2>Set Availability</h2>
  <form method="POST" action="/employee/availability">
    <div class="mb-3">
      <label class="form-label">Available Days</label>
      <div class="form-check">
        <% const daysOfWeek = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]; %>
        <% daysOfWeek.forEach(function(day) { %>
          <input class="form-check-input" type="checkbox" name="days" value="<%= day %>"
            id="day-<%= day %>"
            <% if (availability && availability.includes(day)) { %> checked <% } %> >
          <label class="form-check-label" for="day-<%= day %>"><%= day %></label><br>
        <% }) %>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div> 